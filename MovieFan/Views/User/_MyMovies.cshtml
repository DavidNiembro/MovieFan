@model Users

<h4>Film Suivi</h4>
<div class="row border" style="background-color:#e5e2e2">
    <div class="col-sm-2">Titre</div>
    <div class="col-sm-2">Notes</div>
    <div class="col-sm-6">Commentaires</div>
</div>
@foreach (UserLikeMovie ulm in Model.UserLikeMovie)
{
    <div class="row border">
        <div class="col-sm-2">@ulm.Movie.Title</div>
        <div class="col-sm-2">@for (int i = 0; i > ulm.Stars; i++)
        {<i class="fas fa-stars" style="color:#ffd800;"></i>}</div>
        <div class="col-sm-6">@ulm.Comment</div>
    </div>
}